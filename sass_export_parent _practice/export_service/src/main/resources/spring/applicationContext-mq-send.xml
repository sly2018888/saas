<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.sly.service"/>
    <!--配置工厂-->
    <rabbit:connection-factory id="connectionFactory" virtual-host="/sass" host="127.0.0.1"
                               port="5672" username="sass" password="sass"/>
    <!--定义mq管理-->
    <rabbit:admin connection-factory="connectionFactory"></rabbit:admin>
    <!--申明队列-->
    <rabbit:queue name="queue" auto-declare="true" durable="true"/>
    <rabbit:queue name="queue1" auto-declare="true" durable="true"/>
    <!--定义交换机绑定队列-->
    <rabbit:direct-exchange name="exchange">
        <rabbit:bindings>
            <rabbit:binding queue="queue" key="mail.send"></rabbit:binding>
            <rabbit:binding queue="queue1" key="mail.birthday"></rabbit:binding>
        </rabbit:bindings>
    </rabbit:direct-exchange>
    <!--消息对象json转换类-->
    <bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.Jackson2JsonMessageConverter"></bean>
    <!--定义模板-->
    <rabbit:template id="rabbitTemplate" connection-factory="connectionFactory" exchange="exchange"
                     message-converter="jsonMessageConverter"/>


</beans>
